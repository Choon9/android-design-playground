<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/card_img"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:srcCompat="@drawable/channel"
        />




    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:text="How to Start a Start up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/card_img"
        app:layout_constraintTop_toTopOf="@+id/card_img"
        android:layout_marginLeft="8dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Educast"
        android:textColor="#999999"
        android:textSize="9dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/title"
        android:layout_marginTop="2dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50,000"
        android:textColor="#1fb1e4"
        app:layout_constraintTop_toBottomOf="@id/teacher"
        app:layout_constraintStart_toStartOf="@id/teacher"
        android:layout_marginTop="10dp"
        android:textSize="9dp"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="78%"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/card_img"
        app:layout_constraintStart_toStartOf="@id/title"

        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19.8.26.24:00 까지"
        android:textSize="8dp"
        app:layout_constraintTop_toTopOf="@id/percent"
        app:layout_constraintStart_toEndOf="@id/percent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:textColor="#999999"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/status1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(28/36)"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toStartOf="@id/date"
        android:textSize="8dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수강중"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toEndOf="@id/status1"
        android:textSize="8dp"
        android:layout_marginLeft="4dp"
        />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="0dp"
        android:text="강좌 어떠셨나요?"
        app:layout_constraintBottom_toBottomOf="@+id/status2"
        app:layout_constraintStart_toEndOf="@id/date"
        app:layout_constraintTop_toTopOf="@id/percent" />
    

</androidx.constraintlayout.widget.ConstraintLayout>